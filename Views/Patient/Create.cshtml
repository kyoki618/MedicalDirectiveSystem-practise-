@model MedicalDirectiveSystem.Models.Patient
    // The Create.cshtml file for adding a new patient
<h2>新增病患</h2>

<form asp-action="Create" method="post">
    <div>
        <label>Id</label>
        <input asp-for="Id" />
    </div>
    <div>
        <label>病歷號</label>
        <input asp-for="MedicalRecordNo" />
    </div>
    <div>
        <label>姓名</label>
        <input asp-for="Name" />
    </div>
    <div>
        <label>身分證字號</label>
        <input asp-for="IdNumber" />
    </div>
    <div>
        <label>出生日期</label>
        <input asp-for="BirthDate" type="date" />
    </div>
    <button type="submit">新增</button>
</form>
